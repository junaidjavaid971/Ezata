<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#262626">


    <TextView
        android:id="@+id/tvQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/str_QTY"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        app:layout_goneMarginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/extraItemTv"
        android:id="@+id/tvItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/str_Item"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toStartOf="@+id/tvPrice"
        app:layout_constraintStart_toEndOf="@+id/tvQty"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        android:id="@+id/extraItemTv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="-Extra Item 1"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintEnd_toEndOf="@id/tvItem"
        app:layout_constraintStart_toStartOf="@id/tvItem"
        app:layout_constraintTop_toBottomOf="@id/tvItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:visibility="gone"
        android:id="@+id/tvInstruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/str_Item"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:textFontWeight="500"
        app:layout_constraintEnd_toStartOf="@+id/tvPrice"
        app:layout_constraintStart_toEndOf="@+id/tvQty"
        app:layout_constraintTop_toBottomOf="@+id/tvItem" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16sdp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/str_Price"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>